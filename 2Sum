class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        unordered_map<int, int> hmap;
        int n = nums.size();
        for(int i = 0; i < n; i++){
            if(hmap.find(target - nums[i]) != hmap.end()){
                return {i, hmap[target - nums[i]]};
            }
            hmap[nums[i]] = i;
        }
        return {-1, -1};
    }
};
