class Solution {
public:
    double myPow(double x, int n) {
        if(n == 0 || x == double(1)) return double(1);
        
        double ans = 1;
        long nn = n;
        if(nn < 0) nn = -1 * nn;
        while(nn > 0){
            if(nn % 2 == 0){
                x *= x;
                nn = nn / 2;
            } else{
                ans = ans * x;
                nn = nn - 1;
            }
        }
        return n < 0 ? (1 / ans) : ans;
    }
};
